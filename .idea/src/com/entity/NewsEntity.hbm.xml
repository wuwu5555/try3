<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.entity.NewsEntity" table="news" schema="zhanghuan">
        <id name="id">
            <column name="id" sql-type="varchar(45)" length="45"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <property name="content">
            <column name="content" sql-type="varchar(1000)" length="1000" not-null="true"/>
        </property>
        <property name="date">
            <column name="date" sql-type="varchar(100)" length="100" not-null="true"/>
        </property>
        <property name="state">
            <column name="state" sql-type="varchar(10)" length="10" not-null="true"/>
        </property>
        <property name="author">
            <column name="author" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>